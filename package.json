{
  "name": "craftdesk",
  "version": "0.3.0",
  "description": "Package manager for Claude Code skills, agents, commands, hooks, and plugins",
  "main": "dist/index.js",
  "bin": {
    "craftdesk": "./bin/craftdesk.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "craftdesk",
    "ai",
    "cli",
    "package-manager",
    "skills",
    "agents"
  ],
  "author": "CraftDesk",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}